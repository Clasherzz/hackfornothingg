{
    "manifest_version": 3,
    "name": "Evil Goofy Blocker",
    "version": "1.0",
    "description": "Blocks evil sites and watches you with evil intentions!",
  
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "extension/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["extension/content.js","camera/tf.min.js",
                    "camera/teachablemachine-image.min.js"]
      }
      
    ],
     "permissions": ["storage","declarativeNetRequest", "declarativeNetRequestWithHostAccess","tabs", "activeTab", "scripting","webNavigation"],
    "options_page": "settings.html"
   

}
  